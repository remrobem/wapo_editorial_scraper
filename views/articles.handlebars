 {{> heading}}
<!-- List of articles -->
<div class="container-fluid">
  {{#each data}}

  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title">
        {{title}} {{#if saved}} {{!--
        <button type="" class="btn btn-purple pull-right notesBtn" id="notesBtn" data-id={{this.id}}>Article Notes</button> --}}
        <button type="submit" class="btn btn-purple pull-right notesBtn" id="notesBtn" data-toggle="modal" data-target="#notesModal"
          data-id={{this.id}}>
          Article Notes
        </button>
        <button type="submit" class="btn btn-danger pull-right deleteBtn" id="deleteBtn" data-id={{this.id}}>Delete from Saved</button>
        {{else}}
        <button type="submit" class="btn btn-success pull-right saveBtn" id="saveBtn" data-id={{this.id}}>Save Article</button>
        {{/if}}
      </h3>
    </div>
    <div class="panel-body">
      {{description}}
    </div>
  </div>
  {{/each}}
</div>

<!-- Notes Modal -->

<div class="modal fade" id="notesModal" tabindex="-1" role="dialog" aria-labelledby="notesModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="notesModalLabel">Notes for Article
          <span id="article_id"></span>
        </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div id="existingNote"></div>
        <div>
          <textarea autofocus id="newNote" maxlength="500" rows="5" placeholder="Add a note" id="addNote" width="100%"></textarea>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id="saveNoteBtn">Save Note</button>
      </div>
    </div>
  </div>
</div>